<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".view.ReservaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="448px"
            android:layout_height="160px"
            android:src="@drawable/logo_pereira"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/ivReservaBanner"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReservaTitulo"
            android:text="TÃ­tulo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReservaArtista"
            android:text="Artista"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReservaData"
            android:text="XX/XX/XXXX - XX:XX"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReservaPreco"
            android:text="R$"/>
        <Spinner
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/spReservaQtdCadeiras"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/bReservaReservar"
            android:text="Reservar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="19dp"
            android:id="@+id/bReservaCancelar"
            android:text="Cancelar"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="19dp"
            android:id="@+id/bReservaSuporte"
            android:text="Suporte"/>
    </LinearLayout>

</LinearLayout>