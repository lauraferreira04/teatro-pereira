<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".view.ReservaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="448px"
            android:layout_height="160px"
            android:src="@drawable/logo_pereira"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:textSize="19dp"
            android:id="@+id/bReservaCancelar"
            android:text="Cancelar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/ivReservaBanner"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReservaTitulo"
            android:text="TÃ­tulo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReservaArtista"
            android:text="Artista"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReservaData"
            android:text="XX/XX/XXXX - XX:XX"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReservaPreco"
            android:text="R$"/>
        <Spinner
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:id="@+id/spReservaQtdCadeiras"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/ivReservaPix"/>
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:id="@+id/bReservaSuporte"
        android:text="Suporte"/>

</LinearLayout>